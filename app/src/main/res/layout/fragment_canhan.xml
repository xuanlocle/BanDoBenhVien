<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CaNhanFragment">

    <ScrollView
        android:id="@+id/scrollvmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/scrollviewcolor"
        android:fillViewport="false"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/top_shape"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/undefined_avatar"
                    app:civ_border_color="@color/scrollviewcolorDark"
                    app:civ_border_width="2dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_margin"
                android:paddingBottom="@dimen/text_margin"
                android:paddingLeft="@dimen/button_margin"
                android:text="Cài đặt cá nhân" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawablePadding="@dimen/button_margin"
                android:text="Xuan Loc"
                android:drawableLeft="@drawable/baseline_account_box_24"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:background="@drawable/button_shape"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawablePadding="@dimen/button_margin"
                android:text="0356969056"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:background="@drawable/button_shape"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawablePadding="@dimen/button_margin"
                android:text="xuanlocle2412@gmail.com"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:background="@drawable/button_shape"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawablePadding="@dimen/button_margin"
                android:text="Mật khẩu"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:background="@drawable/button_shape"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_margin"
                android:paddingBottom="@dimen/text_margin"
                android:paddingLeft="@dimen/button_margin"
                android:text="Cài đặt ứng dụng" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawablePadding="@dimen/button_margin"
                android:text="Thông báo của tôi"
                android:drawableLeft="@drawable/baseline_notifications_24"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:background="@drawable/button_shape"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawablePadding="@dimen/button_margin"
                android:text="19001009"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:background="@drawable/button_shape"
                android:layout_marginTop="@dimen/button_margin"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawablePadding="@dimen/button_margin"
                android:text="Chat với dược sĩ"
                android:drawableLeft="@drawable/baseline_chat_bubble_outline_24"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:background="@drawable/button_shape"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:drawablePadding="@dimen/button_margin"
                android:text="Giới thiệu ứng dụng"
                android:drawableLeft="@drawable/baseline_assignment_24"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:background="@drawable/button_shape"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="@dimen/button_thoat_height"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:layout_marginRight="@dimen/button_margin"
                android:background="@drawable/button_thoat_shape"
                android:drawablePadding="@dimen/button_margin"
                android:text="Thoát"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_margin"
                android:paddingBottom="@dimen/text_margin"
                android:layout_gravity="center"
                android:text="Version 1.0.0" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>